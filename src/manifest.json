{
  "manifest_version": 3,
  "name": "GBF: Translation in Subs",
  "version": "0.0.7",
  "description": "A tool to have dual subs and translations for Granblue Fantasy in your browser!.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "cookies",
    "scripting",
    "webRequest"
  ],
  "content_scripts": [
    {
      "js": ["scripts/gbcontent.js"],
      "matches": [
        "https://game.granbluefantasy.jp/*",
        "https://game.granbluefantasy.jp/#quest/scene/*",
        "https://game.granbluefantasy.jp/#sidestory/scene/*"
      ]
    },
    {
      "js": ["scripts/bridgeContent.js"],
      "matches": [
        "https://game.granbluefantasy.jp/*",
        "https://game.granbluefantasy.jp/#quest/scene/*",
        "https://game.granbluefantasy.jp/#sidestory/scene/*"
      ],
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://game.granbluefantasy.jp/*"],
      "resources": ["modules/*.js", "scripts/*.map"]
    }
  ],
  "action": {
    "default_icon": "assets/GranblueFantasyTiSIcon_16px.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/GranblueFantasyTiSIcon_16px.png",
    "48": "assets/GranblueFantasyTiSIcon_48px.png",
    "128": "assets/GranblueFantasyTiSIcon_128px.png"
  }
}
